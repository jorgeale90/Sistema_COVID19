{% extends 'base.html.twig' %}
{% block titlepage %}Mostrar Usuario{% endblock %}
{% block page_header %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>ADMIN - PERSONAL</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">Usuario</a></li>
                        <li class="breadcrumb-item">Listado Usuario</li>
                        <li class="breadcrumb-item active">Mostrar Usuario</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
{% endblock %}
{% block contenido %}
    <div class="container-fluid">
        <!-- SELECT2 EXAMPLE -->
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title"><strong>Mostrar</strong> Usuario</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Nombre Usuario :</label>
                            {{ user.username }}
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Roles :</label>
                            {{ user.roles? user.roles|join(', ') : '' }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email :</label>
                            {{ user.email }}
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Ultimo Acceso :</label>
                            {{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : '' }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                {% if user.username != app.user.username %}
                {{ include('user/_delete_form.html.twig') }}
                {% endif %}
            </div>
        </div>
    </div>
    <ul>
        <button class="btn btn-warning"><i class="icofont icofont-check-circled"></i><a href="#">Actualizar</a></button>
        <button class="btn btn-outline-info"><i class="icofont icofont-exchange"></i><a href="{{ path('user_index') }}">Volver al Listado</a></button>
    </ul>
{% endblock %}