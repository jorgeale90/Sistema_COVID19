                            {{ form_widget(form.organizacionpolitica, { 'attr': { 'class': 'form-control select2', 'multiple': 'multiple', 'disabled':'disabled' } }) }}
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>{{ form_label(form.categoriadocente, 'Categoría Docente (*):') }}</label>
                            {{ form_widget(form.categoriadocente, { 'attr': { 'class': 'form-control select2', 'disabled':'disabled' } }) }}
                        </div>

                        <div class="form-group">
                            <label>{{ form_label(form.categoriacientifica, 'Categoría Científica (*):') }}</label>
                            {{ form_widget(form.categoriacientifica, { 'attr': { 'class': 'form-control select2', 'disabled':'disabled' } }) }}
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>{{ form_label(form.mision, 'Misión (*):') }}</label>
                            {{ form_widget(form.mision, { 'attr': { 'class': 'form-control icheck-success d-inline', 'disabled':'disabled' } }) }}
                        </div>
