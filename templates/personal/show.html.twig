                            {{ form_widget(form.email, { 'attr': { 'class': 'form-control', 'disabled':'disabled' } }) }}
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>{{ form_label(form.nacionalidad, 'Nacionalidad (*):') }}</label>
                            {{ form_widget(form.nacionalidad, { 'attr': { 'class': 'form-control select2', 'disabled':'disabled' } }) }}
                        </div>

                        <div class="form-group">
                            <label>{{ form_label(form.cargo, 'Cargo (*):') }}</label>
                            {{ form_widget(form.cargo, { 'attr': { 'class': 'form-control select2', 'disabled':'disabled' } }) }}
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>{{ form_label(form.especialidad, 'Especialidad (*):') }}</label>
                            {{ form_widget(form.especialidad, { 'attr': { 'class': 'form-control select2', 'disabled':'disabled' } }) }}
