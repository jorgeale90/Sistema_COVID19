{% extends 'base.html.twig' %}
{% block titlepage %}Alojamiento{% endblock %}
{% block page_header %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>VIAJERO</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">Categoría Viajero</li>
                        <li class="breadcrumb-item active">Listado Alojamiento</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
{% endblock %}
{% block contenido %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><strong>Listado</strong> de Hoteles o Villas</h5>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Hotel o Villa</th>
                            <th>Municipio</th>
                            <th>Provincia</th>
                            <th>Acción</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for alojamientos in alojamiento %}
                            <tr>
                                <td>{{ alojamientos.id }}</td>
                                <td>{{ alojamientos.nombre }}</td>
                                <td>{{ alojamientos.municipio }}</td>
                                <td>{{ alojamientos.municipio.provincia }}</td>
                                <td>
                                    <a class="btn btn-small btn-warning" href="{{ path('alojamiento_edit', {'id': alojamientos.id}) }}">Editar</a>
                                    <a class="btn btn-small btn-danger btn-delete-entity" href="{{ path('removeralojamiento', {'id' : alojamientos.id}) }}">Eliminar</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3"><center>No hay Hoteles o Villas almacenados</center></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <th>#</th>
                            <th>Hospital</th>
                            <th>Municipio</th>
                            <th>Provincia</th>
                            <th>Acción</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>

    <ul>
        <a class="btn btn-small btn-success" href="{{ path('alojamiento_new') }}">
            <i class="fa fa-plus"></i> <strong>Añadir</strong> Alojamiento
        </a>

        <a href="{{ path('alojamiento_index') }}">
            <button type="button" name="reset-filter" id="btn-reset-filtros" class="btn btn-warning"><i
                        class="fa fa-database"></i> Refrescar
            </button>
        </a>

        <a class="btn btn-small btn-primary" href="#"><i
                    class="fa fa-archive"></i> <strong>Exportar</strong> Alojamiento
        </a>
    </ul>
{% endblock %}
{% block javascript %}
<script>
$(function () {
    {% for notice_level in ['success','error','info', 'warning'] %}
    {% set session_var = 'app_' ~ notice_level %}
    {% if app.session.flashbag.has(session_var) %}
    {% for flash in app.session.flashbag.get(session_var) %}
    var n = noty({
        text: '{{ flash }}',
        progressBar : true,
        layout      : 'topRight',
        dismissQueue: true,
        timeout     : 5000,
        closeWith   : ['click'],
        theme       : 'relax',
        type        : '{{ notice_level }}',
        maxVisible  : 10,
        animation   : {
                    open  : 'animated bounceInLeft',
                    close : 'animated bounceOutLeft',
                    easing: 'swing',
                    speed : 500
                }
            });
    {% endfor %}
    {% endif %}
    {% endfor %}
});

$(document).ready(function(){
    $('.btn-delete-entity').click(function(e){

        e.preventDefault();
        var url = $(this).prop('href');
        if(confirm('Estas seguro de eliminar este Alojamiento?')){
            window.location = url;
        }
    })
});
</script>
{% endblock %}